# ==============================================================================
# Docker Environment Configuration
# ==============================================================================
# Copy this file to .env for Docker deployment:
#   cp env.docker.template .env

# Node Environment
NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL=/api

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production-min-32-chars

# Session Configuration (in milliseconds)
SESSION_TIMEOUT=1800000        # 30 minutes
SESSION_WARNING_TIME=120000    # 2 minutes

# Port Configuration
PORT=3000
HOSTNAME=0.0.0.0

# Data Directory
DATA_DIR=/app/data
